<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_q"
        android:text="---------------------------------------------------"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_A"
        android:text="---------------------------------------------------"
        android:layout_below="@+id/tv_q"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_B"
        android:text="---------------------------------------------------"
        android:layout_below="@+id/tv_A"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_C"
        android:text="---------------------------------------------------"
        android:layout_below="@+id/tv_B"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_D"
        android:text="---------------------------------------------------"
        android:layout_below="@+id/tv_C"/>

    <Button
        android:id="@+id/btn_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="REMOVE"
        android:layout_below="@+id/tv_q"
        android:layout_toStartOf="@+id/btn_edit"
        android:layout_marginEnd="57dp"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_remove"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="85dp"
        android:text="EDIT"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <View style="@style/Divider"
        android:layout_alignBottom="@id/btn_edit"
        android:layout_marginTop="10dp"/>

</RelativeLayout>