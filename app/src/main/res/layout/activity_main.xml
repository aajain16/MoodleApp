<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shruti.moodleapp.MainActivity">


    <Button
        android:id="@+id/btn_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:text="ADMIN"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_faculty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FACULTY"
        android:layout_alignBaseline="@+id/btn_admin"
        android:layout_alignBottom="@+id/btn_admin"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STUDENT"
        android:layout_alignBaseline="@+id/btn_faculty"
        android:layout_alignBottom="@+id/btn_faculty"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        android:src="@drawable/ic_mainactivitybanner" />
</RelativeLayout>
