<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shruti.moodleapp.MaterialUpload">


    <EditText
        android:id="@+id/PDF_Name_EditText_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter PDF Name in EditText"
        android:inputType="textPersonName"
        android:layout_alignBottom="@+id/Button_Select_PDF_ID"
        android:layout_toEndOf="@+id/Button_Select_PDF_ID" />

    <Button
        android:text="Upload pdf on online server"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:id="@+id/Button_Upload_PDF_ID"
        android:layout_below="@+id/PDF_Name_EditText_ID"
        />

    <Button
        android:id="@+id/Button_Select_PDF_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select PDF TO Upload"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
